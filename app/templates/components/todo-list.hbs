{{title}}
<br>
{{#each todos as |todo|}}
  {{detail-modal title=todo.title desc=todo.desc}}

{{/each}}


{{#if addTodo}}
  {{input enter="saveTodo" placeholder="Type something..." value=newTodoTitle}}
  <br>
  <button {{action "saveTodo"}}>Save</button>
  <button {{action "cancel"}}>Cancel</button>
{{else}}
  <button {{action "addTodo"}}>Add an item...</button>
{{/if}}


{{yield}}
